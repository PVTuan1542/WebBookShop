<div>
    <!-- Categories Section Begin -->
    <section class="categories">
        <div class="container">
            <div class="row">
                <div class="categories__slider owl-carousel">
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="/img/categories/cat-1.jpg">
                            <h5><a href="/categorys?cate=137">Sách kỹ năng</a></h5>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="/img/categories/cat-2.jpg">
                            <h5><a href="/categorys?cate=139">Sách hot</a></h5>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="/img/categories/cat-3.jpg">
                            <h5><a href="/categorys?cate=141">Sách thiếu nhi</a></h5>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="/img/categories/cat-4.jpg">
                            <h5><a href="/categorys?cate=142">Chuyên nghành</a></h5>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="/img/categories/cat-5.jpg">
                            <h5><a href="/categorys?cate=138">Sách kinh tế</a></h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Categories Section End -->
    <!-- Featured Section Begin -->
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Sách nổi bật</h2>
                    </div>
                    <div class="featured__controls">
                        <ul>
                            <li class="active" data-filter="*">Toàn bộ sách</li>
                            {{!-- <li data-filter=".kynang">Sách kỹ năng sống</li>
                            <li data-filter=".hot">Sách hot, best seller</li>
                            <li data-filter=".thieunhi">Sách thiếu nhi</li>
                            <li data-filter=".chuyennghanh">Sách chuyên nghành</li>
                            <li data-filter=".kinhte">Sách kinh tế</li> --}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
                {{#each Products}}
                <div class="product__item__hover__full col-lg-3 col-md-4 col-sm-6 mix {{this.category}} vegetables">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="">
                            <a href="/detail/{{this.id}}"><img src="{{this.product_img}}" alt="" width="204"
                                    height="300"></a>
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="/shopping-cart/add-to-cart/{{this.id}}"><i
                                            class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <div class="featured__item__text__name">
                                <h6><a href="/detail/{{this.id}}">{{this.product_name}}</a></h6>
                            </div>
                            <div class="product_item_text_monney">
                                <span class="real_price">{{format this.list_price}}</span>
                                <span class="facker_price">
                                    {{format this.fake_price}}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
            <div class="product__pagination product__pagination__home ">
                <a href="/home/?page={{sub data.pageNow 1}}&limit=16"><i class="fa fa-long-arrow-left"></i></a>
                <a id="product_page_1" href="/home/?page=1&limit=16">1</a>
                <a id="product_page_2" href="/home/?page=2&limit=16">2</a>
                <a id="product_page_3" href="/home/?page=3&limit=16">3</a>
                {{#if data.isFour}}
                <span>.</span>
                <span style="margin-right: 16px ;">.</span>
                <a id="product_page_{{data.pageNow}}" href="/home/?page={{data.pageNow}}&limit=16">{{data.pageNow}}</a>
                {{/if}}

                {{#if data.isNearTotalPage}}
                <span>.</span>
                <span style="margin-right: 16px ;">.</span>
                {{/if}}
                {{#if data.isTotalPage}}
                <a href="/home/?page={{data.totalPage}}&limit=16">{{data.totalPage}}</a>
                <a href="/home/?page={{sum data.pageNow 1}}&limit=16"><i class="fa fa-long-arrow-right"></i></a>
                {{/if}}
            </div>

        </div>

    </section>
    <!-- Featured Section End -->

    <!-- Banner Begin -->
    <div class="banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="banner__pic">
                        <img src="https://bookbuy.vn/Res/Images/Album/85aa3be0-6a8b-431e-aa34-834e2a3fda4d.jpg?w=880&scale=both&h=320&mode=crop"
                            alt="">
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="banner__pic">
                        <img src="https://bookbuy.vn/Res/Images/Album/15d360dd-d695-4290-8301-d2c1d41aabb8.jpg?w=880&scale=both&h=320&mode=crop"
                            alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner End -->

    <!-- Blog Section Begin -->
