
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        {{# if products}}
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <h3 style="text-align: center; margin-bottom: 30px;">GIỎ HÀNG</h3>
                        <thead>
                            <tr>
                                <th>Ảnh</th>
                                <th>Tên sách</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Tổng tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            {{# each products}}
                            <tr>
                                <td class="shoping__cart__item">
                                    <img src={{this.item.product_img}} alt="">
                                </td>
                                <td class="shoping__cart_item_name">
                                    <div class="shoping__cart_item_name">
                                        <h5>{{this.item.product_name}}</h5>
                                    </div>
                                </td>
                                <td class="shoping__cart__price">
                                    {{format this.item.list_price}}
                                </td>
                                <td class="shoping__cart__quantity">
                                    <div class="quantity">
                                        <div class="pro-qty">
                                            <input type="text" value="{{ this.qty}}">
                                        </div>
                                    </div>
                                </td>
                                <td class="shoping__cart__total">
                                    {{format this.list_price}}
                                </td>
                                <td class="shoping__cart__item__close">
                                    <a href="/shopping-cart/remove/{{this.item.id}}"><span
                                            class="icon_close"></span></a>
                                </td>
                            </tr>
                            {{/ each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a href="/shop" class="primary-btn cart-btn">Đến shop</a>
                    <a href="#" class="primary-btn cart-btn cart-btn-right"><span class="icon_loading"> </span>
                        Cập nhật giỏ hàng</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Mã giảm giá</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">Áp dụng</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Tổng</h5>
                    <ul>
                        <li>TỔNG TIỀN <span>{{format totalPrice}} </span></li>
                        <li>PHÍ SHIP <span>0 </span></li>
                        <li>THANH TOÁN <span>{{format totalPrice}} </span></li>
                    </ul>

                    <ul>
                        <li> <a href="/shopping-cart/checkout" class="primary-btn">THANH TOÁN BẰNG STRIPE</a> </li>
                        <li> <a href="/shopping-cart/order" class="primary-btn">ĐẶT HÀNG</a></li>
                    </ul>
                </div>
            </div>
        </div>
        {{ else }}
        <div class="container-fluid  mt-100">
            <div class="row">

                <div class="col-md-12">

                    <div class="card">
                        <div class="card-header">
                            <h5>Cart</h5>
                        </div>
                        <div class="card-body cart">
                            <div class="col-sm-12 empty-cart-cls text-center">
                                <img src="https://i.imgur.com/dCdflKN.png" width="130" height="130"
                                    class="img-fluid mb-4 mr-3">
                                <h3><strong>Chưa có sản phẩm nào</strong></h3>
                                <h4>Thêm sản phẩm vào giỏ hàng</h4>
                                <a href="/shop" class="btn btn-primary cart-btn-transform m-3" data-abc="true">Đến cửa
                                    hàng
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/ if}}
    </div>
</section>
<!-- Shoping Cart Section End -->