<script>
  // When the user scrolls the page, execute myFunction
  window.onscroll = function () { myFunction() };

  // Get the header
  var header = document.getElementById("fix_hold_header");

  // Get the offset position of the navbar
  var sticky = header.offsetTop;

  // Add the sticky class to the header when you reach its scroll position. Remove "sticky" when you leave the scroll position
  function myFunction() {
    if (window.pageYOffset > sticky) {
      document.getElementById("fix_hold_header").style.zIndex = 4000;
      document.getElementById("fix_hold_header").style.width = "100%";
      header.classList.add("sticky");
    } else {
      document.getElementById("fix_hold_header").style.backgroundColor = "#f5f5f5";
      document.getElementById("fix_hold_header").style.zIndex = 4000;
      document.getElementById("fix_hold_header").style.width = "none";
      header.classList.remove("sticky");
    }
  }
</script>